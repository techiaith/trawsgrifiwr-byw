<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="VoskWelshSpeechRecognitionAvalonia.MainWindow"
        Title="Ap Hel Lleferydd - Adnabod Lleferydd Byw // Real-time Speech Recognition"
        Width="900" Height="600"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">

    <Window.Styles>
        <Style Selector="Button.modern">
            <Setter Property="Background" Value="#00843D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.modern:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#006B31"/>
        </Style>
        <Style Selector="Button.modern:disabled">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#999999"/>
        </Style>
        <Style Selector="Button.modern:focus /template/ ContentPresenter">
            <Setter Property="BorderBrush" Value="#FFD700"/>
            <Setter Property="BorderThickness" Value="3"/>
        </Style>

        <Style Selector="Button.stop">
            <Setter Property="Background" Value="#C8102E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.stop:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#A00D25"/>
        </Style>
        <Style Selector="Button.stop:disabled">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#999999"/>
        </Style>
        <Style Selector="Button.stop:focus /template/ ContentPresenter">
            <Setter Property="BorderBrush" Value="#FFD700"/>
            <Setter Property="BorderThickness" Value="3"/>
        </Style>
    </Window.Styles>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Ap Hel Lleferydd"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#333333"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"
                   AutomationProperties.Name="Ap Hel Lleferydd - Welsh Speech Recognition Application"
                   AutomationProperties.HelpText="Real-time Welsh speech recognition application"/>

        <!-- Status Panel -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#D0D0D0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Ellipse x:Name="StatusIndicator"
                         Width="16"
                         Height="16"
                         Fill="#00843D"
                         Margin="0,0,10,0"
                         VerticalAlignment="Center"
                         AutomationProperties.Name="Status indicator"
                         AutomationProperties.HelpText="Visual status indicator"/>

                <TextBlock x:Name="StatusText"
                           Grid.Column="1"
                           Text="Barod i ddechrau - Ready to start"
                           FontSize="14"
                           Foreground="#444444"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           AutomationProperties.LiveSetting="Assertive"
                           AutomationProperties.Name="Application status"
                           AutomationProperties.HelpText="Current status of the speech recognition application"/>
            </Grid>
        </Border>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15">
            <Button x:Name="StartButton"
                    Content="Start Recording / Dechrau Recordio"
                    Click="StartButton_Click"
                    Classes="modern"
                    AutomationProperties.Name="Start Recording"
                    AutomationProperties.HelpText="Press to start recording speech. Keyboard shortcut: F5"
                    AutomationProperties.AccessKey="F5"/>
            <Button x:Name="StopButton"
                    Content="Stop Recording / Stopio Recordio"
                    Click="StopButton_Click"
                    IsEnabled="False"
                    Classes="stop"
                    AutomationProperties.Name="Stop Recording"
                    AutomationProperties.HelpText="Press to stop recording speech. Keyboard shortcut: F6"
                    AutomationProperties.AccessKey="F6"/>
            <Button x:Name="ClearButton"
                    Content="Clear / Clirio"
                    Click="ClearButton_Click"
                    Classes="modern"
                    AutomationProperties.Name="Clear Transcriptions"
                    AutomationProperties.HelpText="Press to clear all transcription text. Keyboard shortcut: F7"
                    AutomationProperties.AccessKey="F7"/>
        </StackPanel>

        <!-- Live Input Panel -->
        <Border Grid.Row="3"
                Background="White"
                BorderBrush="#D0D0D0"
                BorderThickness="1"
                CornerRadius="8"
                Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="#00843D"
                        CornerRadius="8,8,0,0"
                        Padding="12,8">
                    <TextBlock Text="Mewnbwn Byw - Live Input"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="White"
                               AutomationProperties.Name="Live Input Section"
                               AutomationProperties.HelpText="This section shows partial transcription as you speak"/>
                </Border>

                <Border Grid.Row="1"
                        Background="#F9FCFA"
                        BorderBrush="#00843D"
                        BorderThickness="0,2,0,0"
                        Padding="15"
                        Margin="0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  AutomationProperties.Name="Live input scroll area">
                        <TextBlock x:Name="LiveInputText"
                                   FontSize="18"
                                   TextWrapping="Wrap"
                                   Foreground="#333333"
                                   Text="Bydd trawsgrifiad rhannol yn ymddangos yma... / Partial transcription will appear here..."
                                   AutomationProperties.LiveSetting="Polite"
                                   AutomationProperties.Name="Live partial transcription"
                                   AutomationProperties.HelpText="Shows real-time partial transcription of your speech"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>

        <!-- Separator -->
        <Separator Grid.Row="4" Margin="0,5" Background="Transparent" Height="1"/>

        <!-- Completed Transcriptions -->
        <Border Grid.Row="5"
                Background="White"
                BorderBrush="#D0D0D0"
                BorderThickness="1"
                CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="#C8102E"
                        CornerRadius="8,8,0,0"
                        Padding="12,8">
                    <TextBlock Text="Trawsgrifiadau Cyflawn - Completed Transcriptions"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="White"
                               AutomationProperties.Name="Completed Transcriptions Section"
                               AutomationProperties.HelpText="This section shows completed transcribed sentences"/>
                </Border>

                <Border Grid.Row="1"
                        Background="White"
                        BorderBrush="#C8102E"
                        BorderThickness="0,2,0,0"
                        Padding="15">
                    <ScrollViewer x:Name="TranscriptionsScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  AutomationProperties.Name="Completed transcriptions scroll area">
                        <TextBlock x:Name="TranscriptionsText"
                                   FontSize="14"
                                   TextWrapping="Wrap"
                                   Foreground="#333333"
                                   Text="Bydd brawddegau cyflawn yn ymddangos yma... / Completed sentences will appear here..."
                                   AutomationProperties.LiveSetting="Polite"
                                   AutomationProperties.Name="Completed transcriptions"
                                   AutomationProperties.HelpText="Shows finalized transcribed sentences with timestamps"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
